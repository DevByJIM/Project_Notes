<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:angle="90"
                android:startColor="@color/secondary_500"
                android:endColor="@color/primary_200" />
            <corners android:radius="10dp"/>
            <stroke android:color="@color/textColor"
                android:width="1dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="90"
                android:startColor="@color/primary_200"
                android:endColor="@color/secondary_500"/>
            <corners android:radius="10dp"/>
            <stroke android:color="@color/titleColour"
                android:width="2dp"/>
            <scale android:scaleHeight="10dp"
                android:scaleWidth="10dp"/>
        </shape>

    </item>

</selector>